@model CleanArch.Application.ViewModels.ProductViewModel
@{ ViewData["Title"] = "Detalhes"; }

<h1>Detalhes</h1>

<dl class="row">
    <dt class="col-sm-2">Id</dt><dd class="col-sm-10">@Model.Id</dd>
    <dt class="col-sm-2">Nome</dt><dd class="col-sm-10">@Model.Name</dd>
    <dt class="col-sm-2">Descrição</dt><dd class="col-sm-10">@Model.Description</dd>
    <dt class="col-sm-2">Preço</dt><dd class="col-sm-10">@Model.Price.ToString("C")</dd>
</dl>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</p>
